@model Model.Users
@{
    ViewBag.Title = "注册-个人用户";
    Layout = "~/Views/Sharp/_LayoutPage.cshtml";
    Html.EnableClientValidation();
}

@section Head{
<link href="~/Content/projectcss/regist.personal.css" rel="stylesheet" />
<link href="~/Content/projectcss/passport.base.css" rel="stylesheet" />
     <script type="text/javascript">
         $(function () {
          
         });
     </script>
    <style type="text/css">
       .mc input{
            width:238px;
        }
    </style>
    }


<div class="w" id="logo">
    <div>
        <a ><img src="http://www.jd.com/misc2014/skin/df/i/logo-2013.png" alt="" width="170" height="60"></a> <b></b>
    </div>
</div>


@*******************************************@
<div class="w" id="regist">
    <div class="mt">
        <ul class="tab">
            <li class="curr">个人用户</li>
        </ul>
        <div class="extra">
            <span>我已经注册，现在就&nbsp;<a href="https://passport.jd.com/uc/login" class="flk13">登录</a></span>
        </div>
    </div>
    <div class="mc">
        @using (Html.BeginForm("Register", "Users", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
      

            <div class="form-group">
                <label for="LoginCode" class="col-sm-2 control-label">用户名</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(p => p.LoginCode, new { @class = "form-control", placeholder = "用户名", style = "width:238px; " })
                    @Html.ValidationMessageFor(p => p.LoginCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="PassWord" class="col-sm-2 control-label">密&nbsp;码</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(p => p.PassWord, new { @class = "form-control", placeholder = "密 码" })
                </div>
            </div>

            <div class="form-group">
                <label for="ConfirmPwd" class="col-sm-2 control-label">确认密码</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(p => p.ConfirmPwd, new { @class = "form-control", placeholder = "确认密码" })
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">邮&nbsp;箱</label>
                <div class="col-sm-10">

                    <input type="email" class="form-control" id="inputPassword3" placeholder="邮箱">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">注册</button>
                </div>
            </div>

        }
    </div>
</div>





